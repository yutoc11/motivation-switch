{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source" : "**",
        "headers" : [
          {
            "key" : "Access-Control-Allow-Origin",
            "value" : "*"
          }
        ]
      }
    ],
    "headers": [
      {
        "source" : "**",
        "headers" : [
          {
            "key":"Content-Security-Policy",
            "value":"default-src '*"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/s/**", "function": "s"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
